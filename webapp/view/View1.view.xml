<mvc:View controllerName="project1.controller.View1"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
>
    <Page title="{i18n>titleView1}">
        <content>
            <Button text="Message" press="showMessageOnClick" class="sapUiSmallMargin" />
            <Button text="NavTo" press="navToViewOnClick" class="sapUiSmallMargin" />
            <List items="{data>/data}">
                <ObjectListItem
                    press=".onItemSelected"
                    type="Active"
                    title="{data>name}"
                    number="{data>price}"
                />
            </List>
            <Panel id="productDetailsPanel" headerText="{i18n>productDetails}"
                class="sapUiResponsiveMargin" width="auto">
                <form:SimpleForm editable="true" layout="ColumnLayout"
                    binding="{data>/selectedProduct}">
                    <Label text="{i18n>description}" />
                    <Input value="{data>description}" />
                    <Label text="{i18n>name}" />
                    <Input value="{data>name}" />
                    <Label text="{i18n>price}" />
                    <Input value="{data>price}" />
                    <Label text="{i18n>quantity}" />
                    <Input value="{data>quantity}" />
                    <Label text="{i18n>color}" />
                    <Input value="{data>color}" />

                </form:SimpleForm>
            </Panel>
            <Panel headerText="{i18n>addNewProduct}" class="sapUiResponsiveMargin" width="auto">
                <form:SimpleForm editable="true" layout="ColumnLayout">
                    <Label text="Nome" />
                    <Input id="newProductName" value="" required="false" />
                    <Label text="Prezzo" />
                    <Input id="newProductPrice" value="" required="false" />
                    <Label text="Descrizione" />
                    <Input id="newProductDescription" value="" required="false" />
                    <Label text="QuantitÃ " />
                    <Input id="newProductQuantity" value="" required="false" />
                    <Label text="Colore" />
                    <Input id="newProductColor" value="" required="false" />

                </form:SimpleForm>
                <Button icon="sap-icon://add" press=".onAddProduct"
                    class="sapUiSmallMargin sapUiHighlight" />
                <Button icon="sap-icon://edit" press=".onUpdateProduct"
                    class="sapUiSmallMargin sapUiSuccess" />
                <Button icon="sap-icon://delete" press=".onDeleteProduct"
                    class="sapUiSmallMargin sapUiNegative" />


            </Panel>
        </content>
    </Page>
</mvc:View>